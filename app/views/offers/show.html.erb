<div class="container card-offer">
  <div class="card-img" style="background-image: linear-gradient(rgba(245, 246, 252, 0.52), rgba(117, 19, 93, 0.73)), url('<%= photo_url(@offer) %>')">
    <h1> <%= @offer.title %></h1>
  </div>
  <div class="card-text">
    <div class="card-description">
      <p><%= @offer.description  %></p>
      <%= link_to 'Select offer', new_offer_coaching_path(@offer) %>
    </div>

  <div class="card-info">
      <div>  display: box;
        <p><%= @offer.localisation  %></p>
      </div>
      <div>
        <p><%= @offer.discipline  %></p>
      </div>

       <div>
        <%= avatar_url(@offer) %>
      </div>
      <div>
        <p><%= @offer.user.username  %></p>
      </div>
      <div>
        <p>Number of courses :</p>
        <p><%= Offer.where(user_id: current_user).count  %></p>
      </div>

      <div>
        <p><%= @offer.user.email  %></p>
      </div>
      <div>
        <%= link_to 'Leave a review', new_offer_review_path(@offer), class: "btn-purple" %>
      </div>

      <div class="card-link purple-color pt-2">
        <%= link_to edit_offer_path(@offer) do  %>
        <%= icon('fas', 'edit')  %> |
        <% end %>
        <%= link_to root_path do  %>
        <%= icon('fas', 'home') %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="title-review">
    <h3>Review</h3>

    <% @offer.reviews.each do |review| %>
        <div class="comment">
         <div class="review-top">
          <p class="user-review mb-0"><%= review.user.username.capitalize %></p>
          <p class="date-review mb-0"><%= review.created_at.strftime("%d %m %Y") %></p>
        </div>
          <p><%= review.content %></p>
          <div id="review-data">
           <%= review.rating %>/10

          </div>
        </div>
    <% end %>
  </div>
  </div>
  </div>
</div>
