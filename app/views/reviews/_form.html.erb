<div class="background_img">
  <div class="container">
    <div class="container-form">
      <%= simple_form_for [ @offer, @review ] do |f| %>
        <%= f.rich_text_area :content %>
        <%= f.input :rating, collection: (1..10).to_a, prompt: "Choose a rating, 1 bad, 10 perfect"%>
        <%= f.submit "Submit review", class: "btn-purple" %>
      <% end %>
    </div>
  </div>
</div>
