<div class="background_img">
<div class="container">
  <div class="container-form" style="">
  <h2 class="title-index">All the state of your reservation</h2>
  <div class="coaching-list-detail">
  <% @coachings.reverse.each do |coaching| %>
    
    <div class="coaching-list-detail-box">
    <p><%= coaching.offer.title %> : <%= coaching.coaching_date.strftime("%d %m %Y") %> Ã  <%= coaching.offer.localisation  %></p>
    <p>State : 
    <% if coaching.not_set? %>
       waiting for validation.
    <% elsif coaching.accepted? %>
       accepted.
    <% elsif coaching.refused? %>
       refused.
    <% end %>  
    </p>
    <p><%= link_to "Contact", offer_coaching_path(coaching.offer, coaching), class: "contact-coaching"  %></p>
    </div>
    <hr>
  <% end %>
  </div>
</div>
</div>
</div>